local USEMODEM = false

for k, v in pairs( rs.getSides() ) do
	USEMODEM = peripheral.isPresent( v ) and peripheral.getType( v )
	if USEMODEM then
		break
	end
end

function listen()
 if USEMODEM then
	print("Listening...")
	 while true do
		id, msg, distance = rednet.receive()
		if msg ~= nil then
			print(textutils.formatTime(os.time(), true) .. " - " .. msg)
		end
	 end
 end
end

function main_loop()
 while true do
	local s = read()
	if s == "clear" then
		term.clear()
	elseif s == "returnAll" then
		rednet.broadcast("return Mining1")
		rednet.broadcast("return Mining2")
		rednet.broadcast("return Mining3")
		rednet.broadcast("return Mining4")
	elseif s == "stopAll" then
		rednet.broadcast("stop Mining1")
		rednet.broadcast("stop Mining2")
		rednet.broadcast("stop Mining3")
		rednet.broadcast("stop Mining4")
	elseif s == "backup" then
		rednet.broadcast(s)
	end
	sleep(0.05)
 end
end

--end of file run everything
parallel.waitForAll(listen, main_loop)